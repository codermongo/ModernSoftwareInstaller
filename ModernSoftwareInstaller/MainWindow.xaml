                Margin="10,0,0,0" Height="35" Width="100"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                    <Button Content="âœ… Alle auswÃ¤hlen" Click="SelectAllUninstall_Click"
